<div class="sidebar">
    <div class="latest-news">
        <h3>Latest News</h3>
        <div class="news-list">
            <div class="news-list-inner rendered-html" id="news-list">
                <%- safeHtml %>
            </div>
        </div>
    </div>
    <div class="call-for-papers">
        <h3>Call for Papers</h3>
        <div class="papers-list">

            <!-- <div class="papers-list-inner" id="papers-list">Welcome to EPRA Journals</div> -->
            <div class="papers-list-inner" id="papers-list"><%- sections.CALL_FOR_PAPER.content %></div>
        </div>
    </div>
    <div class="recent-feedback-right">
        <h3>Recent Feedbacks</h3>
        <div class="feedback-list feedback-list-right">
            <div class="feedback-list-inner">
                <% if (latestFeedbacks && latestFeedbacks.length) { %>
                    <% latestFeedbacks.forEach(feedback => { %>
                        <div class="feedback-item">
                            <p><%= feedback.feedback %></p>
                            <p>- <%= feedback.fullName %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No feedback available.</p>
                <% } %>
            </div>
        </div>
    </div>

    <div id="feedback-list">
      
    </div>
</div>

