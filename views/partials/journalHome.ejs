<style>
    body {
    font-family: 'Arial', sans-serif;
    background: #f4f7fa;
    color: #333;
    margin: 0;
    padding: 0;
}

.current-issue-container {
    max-width: 1200px;
    /* margin: 20px auto; */
    /* padding: 20px; */
    padding: 5px 12px;
}

.issue-header {
    display: flex;
    align-items: center;
    /* background: linear-gradient(135deg, #1e3c72, #2a5298); */
    background: linear-gradient(135deg, #2d6a4f, #4ebf95);
    color: white !important; 
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
    animation: fadeIn 1s ease-in;
}

.journal-cover {
    width: 120px;
    height: 150px;
    object-fit: cover;
    border-radius: 10px;
    margin-right: 20px;
    transition: transform 0.3s;
}

.journal-cover:hover {
    transform: scale(1.05);
}

.issue-info h1 {
    font-size: 2em;
    margin-bottom: 10px;
}

.issue-info p {
    font-size: 0.9em;
    margin: 5px 0;
}

.section-title {
    color: #2d6a4f;
    margin-bottom: 20px;
    font-size: 1.8em;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;
    border-bottom: 1px solid #e0e0e0;
}

.articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.article-card {
    background: #ffffff;
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.article-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(30, 60, 114, 0.1);
}

.article-header {
    margin-bottom: 10px;
}

.article-title {
    color: #2d6a4f;
    font-size: 1.2em;
    margin-bottom: 5px;
}

.article-meta {
    font-size: 0.8em;
    color: #666;
    border-bottom: 1px solid;
    margin-bottom: 2px !important;
}

.article-content {
    flex-grow: 1;
}

.article-abstract {
    font-size: 0.9em;
    color: #555;
    margin-bottom: 10px;
    line-height: 1.4;
}

.view-pdf, .view-abstract {
    display: inline-block;
    padding: 8px 15px;
    margin-right: 10px;
    text-decoration: none;
    border-radius: 5px;
    transition: all 0.3s;
}

.view-pdf {
    background: white;
    color: #2d6a4f;
    font-weight: 600;
    border: 1px solid;
}

.view-pdf:hover {
    background: #2d6a4f;
    color: white;
    font-weight: 600;
    transform: translateY(-2px);
}

.view-abstract {
    background: #2d6a4f;
    color: white;
    font-weight: 600;
}

.view-abstract:hover {
    background: white;
    color: #2d6a4f;
    border: 1px solid;
    transform: translateY(-2px);
}

.article-stats {
    display: flex;
    justify-content: space-between;
    font-size: 0.8em;
    color: #888;
    margin-top: 10px;
}

.article-stats span {
    display: flex;
    align-items: center;
}

.article-stats i {
    margin-right: 5px;
    color: #2d6a4f;
}

.pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    align-items: center;
    margin-top: 20px;
}

.pagination button {
    padding: 8px 15px;
    background: linear-gradient(90deg, #2d6a4f, #4ebf95);

    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s, transform 0.3s;
}

.pagination button:disabled {
    background: #cccccc;
    cursor: not-allowed;
}

.pagination button:hover:not(:disabled) {
    background: linear-gradient(90deg, #2d6a4f, #4ebf95);
    transform: translateY(-2px);
}

.pagination #pageInfo {
    font-size: 1em;
    color: #1e3c72;
    font-weight: bold;
}

/* Animations */
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
    .issue-header {
        flex-direction: column;
        text-align: center;
    }

    .journal-cover {
        margin: 0 0 15px 0;
    }

    .articles-grid {
        grid-template-columns: 1fr;
    }

    .article-card {
        padding: 10px;
    }
}
</style>

<div class="current-issue-container">
    <header class="issue-header">
        <img src="<%= journalData.img_url %>" alt="<%= journalData.name %> Cover" class="journal-cover">
        <div class="issue-info">
            <h1 style="color: white;"><%= journalData.name %></h1>
            <p><strong>Volume:</strong> <%= journalData.volume %> | <strong>Issue:</strong> <%= journalData.issue %> | <strong>Month:</strong> <%= journalData.month %> <%= journalData.year %></p>
            <p><strong>Category:</strong> <%= journalData.category %></p>
            <% if (journalData.eissn || journalData.pissn || journalData.sjif || journalData.isi) { %>
                <p>
                    <% if (journalData.eissn) { %> <strong>E-ISSN:</strong> <%= journalData.eissn %> <% } %>
                    <% if (journalData.pissn) { %> <strong>P-ISSN:</strong> <%= journalData.pissn %> <% } %>
                    <% if (journalData.sjif) { %> <strong>SJIF:</strong> <%= journalData.sjif %> <% } %>
                    <% if (journalData.isi) { %> <strong>ISI:</strong> <%= journalData.isi %> <% } %>
                </p>
            <% } %>
        </div>
    </header>

    <div class="articles-section">
        <h2 class="section-title">Current Issue Articles</h2>
        <% if (articles && articles.length > 0) { %>
        <div class="articles-grid" id="articlesGrid">
            <% articles.forEach(article => { %>
                <div class="article-card">
                    <div class="article-header">
                        <h3 class="article-title"><%= article.authors_all %></h3>
                        <p class="article-meta">Published: <%= new Date(article.published_on).toLocaleDateString() %></p>
                    </div>
                    <div class="article-content">
                        <p class="article-abstract"><%= article.abstract.substring(0, 250) %>...</p>
                        <a href="<%= article.doc_url %>" target="_blank" class="view-pdf">View PDF</a>
                        <a href="<%= article.url %>" target="_blank" class="view-abstract">View Article</a>
                    </div>
                    <div class="article-stats">
                        <span><i class="fas fa-download"></i> <%= article.download_count %> Downloads</span>
                        <span><i class="fas fa-eye"></i> <%= article.views_count %> Views</span>
                    </div>
                </div>
            <% }); %>
        </div>
        <% } else { %>
            <p style="text-align: center; font-size: 1.2em; color: #2d6a4f;">No articles available for this Journal / Archives.</p>
        <% } %>
        <!-- <div class="pagination" id="pagination">
            <button id="prevBtn" disabled>Previous</button>
            <span id="pageInfo">Page <span id="currentPage">1</span> of <span id="totalPages"><%= Math.ceil(articles.length / 6) %></span></span>
            <button id="nextBtn">Next</button>
        </div> -->
    </div>
</div>