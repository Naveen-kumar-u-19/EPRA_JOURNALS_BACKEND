 <style>
 
    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 30px;
      font-size: 2.5em;
      text-transform: uppercase;
      letter-spacing: 2px;
    }
    .archive-year {
      margin-bottom: 40px;
    }
    .year-title {
      font-size: 1.8em;
      color: #2980b9;
      border-bottom: 2px solid #3498db;
      padding-bottom: 10px;
      margin-bottom: 20px;
    }
    .month-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 15px;
    }
    .month-card {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 20px;
      text-align: center;
      transition: transform 0.2s, box-shadow 0.2s;
      border: 1px solid #e0e0e0;
    }
    .month-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }
    .month-name {
      font-size: 1.2em;
      color: #2c3e50;
      margin-bottom: 10px;
      font-weight: bold;
    }
    .article-count {
      font-size: 1.5em;
      color: #e74c3c;
      font-weight: bold;
    }
    @media (max-width: 600px) {
      .month-grid {
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      }
      .month-card {
        padding: 15px;
      }
      .month-name {
        font-size: 1em;
      }
      .article-count {
        font-size: 1.2em;
      }
    }
  </style>
  <h1>Journal Archives</h1>
  <% allArchives.forEach(yearData => { %>
    <div class="archive-year">
      <h2 class="year-title"><%= yearData.year %></h2>
      <div class="month-grid">
        <% yearData.months.forEach(month => { %>
          <div class="month-card">
            <div class="month-name"><%= month.month %></div>
            <div class="article-count"><%= month.articles_count %></div>
          </div>
        <% }) %>
      </div>
    </div>
  <% }) %>